<div class='container'>
  <div class='row'>
    <div class="col-md-8 col-md-offset-2">
      <p id="notice"><%= notice %></p>
      <div class='row'>
        <div class='col-sm-8'>
          <h1><%= @friend.full_name %>'s Exercises</h1>
        </div>
        <div class='col-sm-4'>
          <%= link_to 'Back', user_exercises_path(current_user),
          class: "btn btn-success d-flex align-items-center ed-btn" %>
        </div>
      </div>

      <table class="table table-striped">
        <thead>
          <tr>
            <th>Duration (min)</th>
            <th>Details</th>
            <th>Activity date</th>
          </tr>
        </thead>

        <tbody>
          <% @exercises.each do |exercise| %>
            <tr>
              <td><%= exercise.duration_in_min %></td>
              <td><%= truncate(exercise.workout, length: 100) %></td>
              <td><%= exercise.workout_date %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= content_tag :div, '', id: 'chart', data: { workouts: @exercises } %>
    </div>
  </div>
</div>